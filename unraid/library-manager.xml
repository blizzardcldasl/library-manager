<?xml version="1.0"?>
<Container version="2">
  <Name>library-manager</Name>
  <Repository>ghcr.io/blizzardcldasl/library-manager:latest</Repository>
  <Registry>https://github.com/blizzardcldasl/library-manager/pkgs/container/library-manager</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/blizzardcldasl/library-manager/issues</Support>
  <Project>https://github.com/blizzardcldasl/library-manager</Project>
  <Overview>Library Manager (Fork) - Enhanced audiobook library management with recursive scanning, file verification, and empty folder management. Fork of deucebucket/library-manager with improvements for structure detection and validation.</Overview>
  <Category>MediaApp:Books MediaServer:Books Tools:Utilities</Category>
  <WebUI>http://[IP]:[PORT:5757]/</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/blizzardcldasl/library-manager/main/unraid/library-manager.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/blizzardcldasl/library-manager/main/static/icon.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled/>
  <DonateText>Buy me a coffee</DonateText>
  <DonateLink/>
  <Requires/>
  <Config Name="Web UI Port" Target="5757" Default="5757" Mode="tcp" Description="Port for the web interface" Type="Port" Display="always" Required="true" Mask="false">5757</Config>
  <Config Name="Audiobook Library" Target="/audiobooks" Default="/mnt/user/media/audiobooks" Mode="rw" Description="Path to your audiobook library (read/write for organization features)" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/media/audiobooks</Config>
  <Config Name="Data Directory" Target="/data" Default="/mnt/user/appdata/library-manager" Mode="rw" Description="Configuration and database storage" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/library-manager</Config>
  <Config Name="Timezone" Target="TZ" Default="America/New_York" Mode="" Description="Your timezone" Type="Variable" Display="advanced" Required="false" Mask="false">America/New_York</Config>
</Container>
